<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <TextView
        android:layout_gravity="center"
        android:text="Verify number"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="22sp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView

        android:gravity="center"
        android:text="Add your phone number, we will send you a verfication code so we know you're real"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <EditText
        android:hint="Name"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/edit_background"
        android:padding="10dp"
        android:inputType="text"
        android:onClick="onClickName"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <EditText
        android:hint="Phone Number"
        android:layout_marginTop="20dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:inputType="number"
        android:maxLength="10"
        android:id="@+id/phone"
        android:background="@drawable/edit_background"
        android:padding="10dp"
        android:onClick="onClickPhone"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>


    <Button
        android:layout_width="match_parent"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:gravity="center"
        android:text="send otp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:onClick="onclickOtp"
        android:backgroundTint="@color/ColorLightTeal"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="Why Phone number?"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text=" For feeback / suggestioins / complaints related to our services"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="Your Phone number won't be used for promotional purposes*"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>




</LinearLayout>